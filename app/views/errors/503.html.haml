- content_for :page_title do
  = t('errors.503.title')

- content_for :content do
  = t('errors.503.content')

- content_for :error_code do
  = 503

- content_for :static_image do
  = error_asset_url(t('errors.503.static_image')) unless t('errors.503.static_image').nil?
  = error_asset_url('images/errors/503-static.png') if t('errors.503.static_image').nil?

- content_for :dynamic_image do
  = error_asset_url(t('errors.503.dynamic_image')) unless t('errors.503.dynamic_image').nil?
  = error_asset_url('images/errors/503-dynamic.png') if t('errors.503.dynamic_image').nil?