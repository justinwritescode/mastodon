- content_for :page_title do
  = @field_template ? @field_template.name : 'Field Template'

.card.my-3
  .card-body
    %p
      %strong Name:
      = @field_template.name
    %p
      %strong Description:
      = @field_template.description
    %p
      %strong Type:
      = @field_template.field_type
    %p
      %strong Default Value:
      = @field_template.default_value
    %p
      %strong Multiple:
      = @field_template.multiple
    = link_to 'Edit', edit_admin_field_template_path(@field_template), class: 'btn btn-warning'
    |
    = link_to 'Back', admin_field_templates_path, class: 'btn btn-secondary'

.card.my-3
  .card-header
    %strong Field Values
  .card-body
    %table.table.table-striped
      %thead
        %tr
          %th Value
          %th Display Value
          %th Description
          %th Default
          %th Order
          %th{ colspan: 3 }
      %tbody
        - @field_template.field_values.each do |field_value|
          %tr
            %td= field_value.value
            %td= field_value.display_value
            %td= field_value.description
            %td= field_value.default
            %td= field_value.order
            %td= link_to 'Show', admin_field_template_field_value_path(@field_template, field_value), class: 'btn btn-primary btn-sm'
            %td= link_to 'Edit', edit_admin_field_template_field_value_path(@field_template, field_value), class: 'btn btn-warning btn-sm'
            %td= link_to 'Destroy', admin_field_template_field_value_path(@field_template, field_value), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'

= link_to 'New Field Value', new_admin_field_template_field_value_path(@field_template), class: 'btn btn-success'
|
= link_to 'Back to Field Templates', admin_field_templates_path, class: 'btn btn-secondary'